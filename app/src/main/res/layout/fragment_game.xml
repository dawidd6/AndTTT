<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:paddingTop="20dp"
    tools:context=".fragments.BaseGameFragment">

    <TextView
        android:id="@+id/player2Score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/symbol_dimen"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/border"
        android:gravity="center_vertical|center_horizontal|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0"
        android:textColor="@color/color_green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/b0"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/frame_vertical_1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/b1"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/frame_vertical_2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toLeftOf="@+id/frame_vertical_1"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_1" />

    <ImageView
        android:id="@+id/b4"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_1" />

    <ImageView
        android:id="@+id/b5"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/frame_vertical_2"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_1" />

    <ImageView
        android:id="@+id/b6"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toLeftOf="@+id/frame_vertical_1"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_2" />

    <ImageView
        android:id="@+id/b7"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_2" />

    <ImageView
        android:id="@+id/b8"
        android:layout_width="@dimen/tile_dimen"
        android:layout_height="@dimen/tile_dimen"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toRightOf="@+id/frame_vertical_2"
        app:layout_constraintTop_toBottomOf="@+id/frame_horizon_2" />

    <View
        android:id="@+id/frame_horizon_1"
        android:layout_width="@dimen/board_dimen"
        android:layout_height="@dimen/frame_dimen"
        android:background="?android:attr/colorForeground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <View
        android:id="@+id/frame_horizon_2"
        android:layout_width="@dimen/board_dimen"
        android:layout_height="@dimen/frame_dimen"
        android:background="?android:attr/colorForeground"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <View
        android:id="@+id/frame_vertical_1"
        android:layout_width="@dimen/frame_dimen"
        android:layout_height="@dimen/board_dimen"
        android:background="?android:attr/colorForeground"
        app:layout_constraintEnd_toStartOf="@+id/b1"
        app:layout_constraintTop_toTopOf="@+id/b1" />

    <View
        android:id="@+id/frame_vertical_2"
        android:layout_width="@dimen/frame_dimen"
        android:layout_height="@dimen/board_dimen"
        android:background="?android:attr/colorForeground"
        app:layout_constraintLeft_toRightOf="@+id/b4"
        app:layout_constraintTop_toTopOf="@+id/b1" />

    <ImageView
        android:id="@+id/boardView"
        android:layout_width="@dimen/board_dimen"
        android:layout_height="@dimen/board_dimen"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/conclusionFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/boardView"
        app:layout_constraintEnd_toEndOf="@+id/boardView"
        app:layout_constraintStart_toStartOf="@+id/boardView"
        app:layout_constraintTop_toTopOf="@+id/boardView" />

    <TextView
        android:id="@+id/conclusionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/nobody_won"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/conclusionFrame"
        app:layout_constraintEnd_toEndOf="@+id/conclusionFrame"
        app:layout_constraintStart_toStartOf="@+id/conclusionFrame"
        app:layout_constraintTop_toTopOf="@+id/conclusionFrame" />

    <TextView
        android:id="@+id/player2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/player2"
        android:textAlignment="center"
        android:textColor="?android:attr/colorForeground"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/player2View"
        app:layout_constraintStart_toEndOf="@+id/player2View"
        app:layout_constraintTop_toTopOf="@+id/player2View" />

    <TextView
        android:id="@+id/player1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/player1"
        android:textAlignment="center"
        android:textColor="?android:attr/colorForeground"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/player1View"
        app:layout_constraintStart_toEndOf="@+id/player1View"
        app:layout_constraintTop_toTopOf="@+id/player1View" />

    <ImageView
        android:id="@+id/player1View"
        android:layout_width="@dimen/symbol_dimen"
        android:layout_height="@dimen/symbol_dimen"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/player1Score"
        app:layout_constraintStart_toEndOf="@+id/player1Score"
        app:layout_constraintTop_toTopOf="@+id/player1Score" />

    <ImageView
        android:id="@+id/player2View"
        android:layout_width="@dimen/symbol_dimen"
        android:layout_height="@dimen/symbol_dimen"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/player2Score"
        app:layout_constraintStart_toEndOf="@+id/player2Score"
        app:layout_constraintTop_toTopOf="@+id/player2Score" />


    <TextView
        android:id="@+id/player1Score"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/symbol_dimen"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/border"
        android:gravity="center_vertical|center_horizontal|center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="0"
        android:textColor="@color/color_green"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/player2Score"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/restartText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/tap_to_restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conclusionText" />

</androidx.constraintlayout.widget.ConstraintLayout>